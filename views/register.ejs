<section class="card form-card">
  <h2>Patient Registration</h2>
  <p>
    Please complete the form below to request admission. Our team will review your information and contact you.
  </p>
  <form method="POST" action="/register">
    <label>Full Name</label>
    <input type="text" name="name" required />

    <label>Email</label>
    <input type="email" name="email" required />

    <label>Password</label>
    <input type="password" name="password" required />

    <label>Phone</label>
    <input type="tel" name="phone" />

    <label>Address</label>
    <input type="text" name="address" />

    <label>Reason for Admission / Notes</label>
    <textarea name="reason" placeholder="Briefly describe your needs or referral information"></textarea>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <div class="actions">
      <button class="btn" type="submit">Submit Request</button>
    </div>
  </form>
</section>
